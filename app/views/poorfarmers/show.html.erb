<br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <% if @poorfarmer.image.present? %>
        <%= image_tag(@poorfarmer.image.medium.url, class: "thumbnail") %>
      <% else %>
        <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2> <%= @poorfarmer.title %> </h2>
      <div><%= @poorfarmer.category.name %> </div>
      <br>
      <div> 家庭人数 : <%= @poorfarmer.quantity %> </div>
      <br>
      <div> 帮扶责任人 : <%= @poorfarmer.helper %> </div>
      <hr>
      <div >
        <p>
          <%== @poorfarmer.description %>
        </p>
      </div>


    </div>
  </div>
</div>

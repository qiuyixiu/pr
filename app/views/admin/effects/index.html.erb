<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10 text-center">
      <h3> 成效情况 </h3>
    </div>
    <div class="col-md-10">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增成效", new_admin_effect_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover  table-responsive">
        <thead class="text-center">
          <tr>
            <th>序号</th>
            <th>成效名称</th>
            <th width="100">操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% @effects.each do |effect| %>
            <tr>
              <td>
                <%= effect.id %>
              </td>
              <td>
                <%= effect.title %>
              </td>
              <td>
                <%= link_to("编辑", edit_admin_effect_path(effect)) %> |
                <%= link_to("删除", admin_effect_path(effect), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @effects %>
    </div>
  </div>
</div>

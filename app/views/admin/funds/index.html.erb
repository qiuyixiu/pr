<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10 text-center">
      <h3> 资金投入 </h3>
    </div>
    <div class="col-md-10">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增资金", new_admin_fund_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover  table-responsive">
        <thead class="text-center">
          <tr>
            <th>序号</th>
            <th>资金名称</th>
            <th width="100">操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% @funds.each do |fund| %>
            <tr>
              <td>
                <%= fund.id %>
              </td>
              <td>
                <%= fund.title %>
              </td>
              <td>
                <%= link_to("编辑", edit_admin_fund_path(fund)) %> |
                <%= link_to("删除", admin_fund_path(fund), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @funds %>
    </div>
  </div>
</div>

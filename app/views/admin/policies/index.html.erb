<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10 text-center">
      <h3> 文件政策 </h3>
    </div>
    <div class="col-md-10">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增文件", new_admin_policy_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover  table-responsive">
        <thead class="text-center">
          <tr>
            <th>序号</th>
            <th>文件名称</th>
            <th width="100">操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% @policies.each do |policy| %>
            <tr>
              <td>
                <%= policy.id %>
              </td>
              <td>
                <%= policy.title %>
              </td>
              <td>
                <%= link_to("编辑", edit_admin_policy_path(policy)) %> |
                <%= link_to("删除", admin_policy_path(policy), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @policies %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10 text-center">
      <h3> 新农村情况 </h3>
    </div>
    <div class="col-md-10">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增项目", new_admin_village_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover  table-responsive">
        <thead class="text-center">
          <tr>
            <th>序号</th>
            <th>项目名称</th>
            <th width="100">操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% @villages.each do |village| %>
            <tr>
              <td>
                <%= village.id %>
              </td>
              <td>
                <%= village.title %>
              </td>
              <td>
                <%= link_to("编辑", edit_admin_village_path(village)) %> |
                <%= link_to("删除", admin_village_path(village), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @villages %>
    </div>
  </div>
</div>

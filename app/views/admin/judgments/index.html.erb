<div class="container">
  <div class="row">
    <br><br><br>
    <div class="col-md-10 text-center">
      <h3> 识别情况 </h3>
    </div>
    <div class="col-md-10">
      <div class="pull-right" style="padding-bottom: 20px;">
        <%= link_to("新增识别", new_admin_judgment_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover  table-responsive">
        <thead class="text-center">
          <tr>
            <th>序号</th>
            <th>识别名称</th>
            <th width="100">操作选项</th>
          </tr>
        </thead>
        <tbody>
          <% @judgments.each do |judgment| %>
            <tr>
              <td>
                <%= judgment.id %>
              </td>
              <td>
                <%= judgment.title %>
              </td>
              <td>
                <%= link_to("编辑", edit_admin_judgment_path(judgment)) %> |
                <%= link_to("删除", admin_judgment_path(judgment), :method => :delete, :data => { :confirm => "Are you sure?"}) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @judgments %>
    </div>
  </div>
</div>
